{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es5",
      "lib": [ "dom", "dom.iterable", "esnext" ],
      "module": "commonjs",
      "allowJs": false,
      "noImplicitAny": true,
      "strict": true,
      "declaration": true,
      "sourceMap": true,
      "jsx": "react",
      "typeRoots": [
        "index.d.ts",
        "node_modules/@types"
      ]
    },
    "include": [
      "src/**/*.tsx",
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "examples",
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  }